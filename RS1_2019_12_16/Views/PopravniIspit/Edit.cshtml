@model RS1_2019_12_16.ViewModels.PopravniIspitUrediVM
@{
    ViewData["Title"] = "Edit";
}

<h2>Uredjivanje popravnog ispita</h2>

<form>
    @{ int i = 0;}
    @foreach (var Clan in Model.Komisija)
    {
        <div class="form-group">
            <label class="control-label" asp-for="@Model.Komisija">@{++i;} @i. Član Komisije: </label>
            <input asp-for="SkolaNaziv" value="@Clan" class="form-control" readonly />
        </div>
    }
    <div class="form-group">
        <label asp-for="Datum" class="control-label">Datum: </label>
        <input asp-for="Datum" value="@Model.Datum" type="datetime" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="SkolaNaziv" class="control-label">Škola: </label>
        <input asp-for="SkolaNaziv" value="@Model.SkolaNaziv" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="SkolskaGodNaziv" class="control-label">Školska godina: </label>
        <input asp-for="SkolskaGodNaziv" value="@Model.SkolskaGodNaziv" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PredmetNaziv" class="control-label">Predmet: </label>
        <input asp-for="PredmetNaziv" value="@Model.PredmetNaziv" class="form-control" readonly />
    </div>
</form>

<div id="ajaxDiv">


</div>
<a asp-action="AddStudent" asp-controller="PopravniIspit" asp-route-id="@Model.PopravniIspitId" class="btn btn-primary">Dodaj ucenika</a>
<a asp-action="Add" asp-controller="PopravniIspit" asp-route-skolskaId="@Model.SkolskaGodId" asp-route-skolaId="@Model.SkolaId" asp-route-predmetId="@Model.PredmetId" class="btn btn-primary">Dodaj popravni ispit</a>

<script>
    $.get("/AjaxStavke/Index?id=@Model.PopravniIspitId", function (result) {
        $("#ajaxDiv").html(result);
    });

</script>